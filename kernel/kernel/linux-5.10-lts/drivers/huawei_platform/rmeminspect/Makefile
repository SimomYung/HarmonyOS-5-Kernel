EXTRA_CFLAGS += -DDDR_PLATFORM_ENABLE
endif

ifeq ($(TARGET_BOARD_PLATFORM), nashville)
EXTRA_CFLAGS += -DDDR_NASHVILLE_PLATFORM
EXTRA_CFLAGS += -DDDR_PLATFORM_ENABLE
endif

ifeq ($(TARGET_BOARD_PLATFORM), xian)
EXTRA_CFLAGS += -DDDR_XIAN_PLATFORM
EXTRA_CFLAGS += -DDDR_PLATFORM_ENABLE
endif

ifeq ($(TARGET_BOARD_PLATFORM), charlotte_pro)
EXTRA_CFLAGS += -DDDR_CHARLOTTE_PRO_PLATFORM
