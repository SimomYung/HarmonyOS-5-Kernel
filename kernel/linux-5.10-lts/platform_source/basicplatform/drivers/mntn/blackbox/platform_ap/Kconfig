config DFX_IRQ_REGISTER
	bool "record irq register"
	depends on DFX_BB
	default n
	help
	  This module can record irq register.

config DFX_REENTRANT_EXCEPTION
	bool "reentrant exception"
	depends on DFX_BB
	default n
	help
	  this module deal with reentrant exception.

