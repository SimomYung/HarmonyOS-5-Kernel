import("//build/ohos.gni")
import("//build/ohos/ndk/ndk.gni")
 
config("libmtp_external_config") {
    include_dirs = [ 
        "./src/"
    ]
}

source = [
    "./src/playlist-spl.c",
    "./src/ptp.c",
    "./src/util.c",
    "./src/libusb1-glue.c",
    "./src/libmtp.c",
    "./src/unicode.c",
]

include = [
    ".",
    "./src/",
    "//third_party/libusb/libusb",
    "//third_party/musl/include"
]

ohos_shared_library("libmtp"){
    public_configs = [ ":libmtp_external_config"]
    sources = source
    include_dirs = include
    cflags = [
        "-w",
        "-w",
        "-Wall",
        "-D_FILE_OFFSET_BITS=64",
        "-Wno-unused-parameter",
        "-Wno-pragma-pack",
        "-Wno-error=header-hygiene",
        "-Wno-register",
        "-Wno-unused-but-set-variable",
    ]

    defines = [
        "LIBMTP_LOG_TAG = \"libmtp\"",
        "LOG_DOMAIN = 0xD004301",
    ]

    deps = [
        "//third_party/libusb:libusb"
    ]

    external_deps = [
        "hilog:libhilog",
    ]

    install_enable = true
    subsystem_name = "open_source"
    part_name = "libmtp"
    install_images = [ "system" ]
}