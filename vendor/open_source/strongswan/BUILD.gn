import("//build/ohos.gni")

# Execute the script and extract strongswan source files
strongswan_gen_dir = "${target_gen_dir}/strongswan/src"
action("strongswan_install_action") {
  script = "//vendor/open_source/strongswan/install.py"
  outputs = [
    "${strongswan_gen_dir}/_updown",
    "${strongswan_gen_dir}/charon",
    "${strongswan_gen_dir}/libcharon",
    "${strongswan_gen_dir}/ipsec",
    "${strongswan_gen_dir}/libipsec",
    "${strongswan_gen_dir}/pki",
    "${strongswan_gen_dir}/starter",
    "${strongswan_gen_dir}/stroke",
    "${strongswan_gen_dir}/libtls",
    "${strongswan_gen_dir}/libstrongswan",
    "${strongswan_gen_dir}/swanctl",
    "${strongswan_gen_dir}/xfrmi",
  ]

  args = [
    "--gen-dir",
    rebase_path("${target_gen_dir}", root_build_dir),
    "--source-file",
    rebase_path("//vendor/open_source/strongswan"),
  ]
}

group("build_strongswan") {
  deps = [
    ":strongswan_install_action",
    "patching/src/_updown:_updown",
    "patching/src/charon:charon",
    "patching/src/ipsec:ipsec",
    "patching/src/pki:pki",
    "patching/src/starter:starter",
    "patching/src/stroke:stroke",
    "patching/src/swanctl:swanctl",
    "patching/src/xfrmi:xfrmi",
    "prebuilts:prebuilts_etc",
  ]
  external_deps = [
    "openssl:libcrypto_shared",
    "openssl:libssl_shared",
  ]
}
