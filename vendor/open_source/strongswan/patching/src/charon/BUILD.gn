import("//build/ohos.gni")
import("//vendor/open_source/strongswan/strongswan_config.gni")

source_gen_dir = "${target_gen_dir}/../../../strongswan/src/charon"
sources_list = [ "${source_gen_dir}/charon.c" ]
action("charon_install_action") {
  script = "//vendor/open_source/strongswan/empty.py"
  outputs = sources_list
  deps = [ "../../../:strongswan_install_action" ]
}

ohos_executable("charon") {
  sources = get_target_outputs(":charon_install_action")

  include_dirs = [
    "${source_gen_dir}/../libcharon",
    "${source_gen_dir}/../libstrongswan",
  ]

  defines = [ "PLUGINS=\"pkcs11 aes des rc2 sha2 sha1 md5 random nonce x509 revocation constraints pubkey pkcs1 pkcs7 pkcs12 pgp dnskey sshkey pem openssl pkcs8 af-alg fips-prf curve25519 xcbc cmac hmac kdf ctr ccm gcm drbg attr kernel-libipsec kernel-pfkey kernel-netlink resolve socket-default farp stroke vici updown eap-identity eap-mschapv2 xauth-generic counters\"" ]
  defines += common_defines
  cflags = common_cflags
  cflags_cc = common_cflags_cc

  deps = [
    ":charon_install_action",
    "../libcharon:libcharon",
    "../libstrongswan:libstrongswan",
  ]
  install_enable = true
  part_name = "strongswan"
  subsystem_name = "open_source"
}
