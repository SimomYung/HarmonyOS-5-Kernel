import("//build/ohos.gni")

source_gen_dir = "${target_gen_dir}/../../../strongswan/src/ipsec"
action("ipsec_install_action") {
  script = "//vendor/open_source/strongswan/empty.py"
  outputs = [ "${source_gen_dir}/_ipsec.in" ]
  deps = [ "../../../:strongswan_install_action" ]
}

ohos_prebuilt_executable("ipsec") {
  ipsec_outputs = get_target_outputs(":ipsec_install_action")
  source = ipsec_outputs[0]
  output = "ipsec"
  deps = [ ":ipsec_install_action" ]
  install_enable = true
  subsystem_name = "open_source"
  part_name = "strongswan"
}
