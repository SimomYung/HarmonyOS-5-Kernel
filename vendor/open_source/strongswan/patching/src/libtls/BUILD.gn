import("//build/ohos.gni")
import("//vendor/open_source/strongswan/strongswan_config.gni")

source_gen_dir = "${target_gen_dir}/../../../strongswan/src/libtls"
sources_list = [
  "${source_gen_dir}/tls.c",
  "${source_gen_dir}/tls_aead.c",
  "${source_gen_dir}/tls_aead_expl.c",
  "${source_gen_dir}/tls_aead_impl.c",
  "${source_gen_dir}/tls_aead_null.c",
  "${source_gen_dir}/tls_aead_seq.c",
  "${source_gen_dir}/tls_alert.c",
  "${source_gen_dir}/tls_cache.c",
  "${source_gen_dir}/tls_compression.c",
  "${source_gen_dir}/tls_crypto.c",
  "${source_gen_dir}/tls_eap.c",
  "${source_gen_dir}/tls_fragmentation.c",
  "${source_gen_dir}/tls_hkdf.c",
  "${source_gen_dir}/tls_peer.c",
  "${source_gen_dir}/tls_prf.c",
  "${source_gen_dir}/tls_protection.c",
  "${source_gen_dir}/tls_server.c",
  "${source_gen_dir}/tls_socket.c",
]

action("libtls_install_action") {
  script = "//vendor/open_source/strongswan/empty.py"
  outputs = sources_list
  deps = [ "../../../:strongswan_install_action" ]
}

ohos_shared_library("libtls") {
  sources = get_target_outputs(":libtls_install_action")
  include_dirs = [
    "${source_gen_dir}",
    "${source_gen_dir}/../libstrongswan",
  ]
  defines = common_defines
  cflags = common_cflags
  cflags_cc = common_cflags_cc
  ldflags = [ "--no-undefined" ]

  deps = [
    ":libtls_install_action",
    "../libstrongswan:libstrongswan",
  ]
  part_name = "strongswan"
  subsystem_name = "open_source"
}
