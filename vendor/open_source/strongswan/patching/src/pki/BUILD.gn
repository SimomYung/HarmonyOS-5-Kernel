import("//build/ohos.gni")
import("//vendor/open_source/strongswan/strongswan_config.gni")

source_gen_dir = "${target_gen_dir}/../../../strongswan/src/pki"
sources_list = [
  "${source_gen_dir}/command.c",
  "${source_gen_dir}/commands/acert.c",
  "${source_gen_dir}/commands/dn.c",
  "${source_gen_dir}/commands/est.c",
  "${source_gen_dir}/commands/estca.c",
  "${source_gen_dir}/commands/gen.c",
  "${source_gen_dir}/commands/issue.c",
  "${source_gen_dir}/commands/keyid.c",
  "${source_gen_dir}/commands/pkcs12.c",
  "${source_gen_dir}/commands/pkcs7.c",
  "${source_gen_dir}/commands/print.c",
  "${source_gen_dir}/commands/pub.c",
  "${source_gen_dir}/commands/req.c",
  "${source_gen_dir}/commands/scep.c",
  "${source_gen_dir}/commands/scepca.c",
  "${source_gen_dir}/commands/self.c",
  "${source_gen_dir}/commands/signcrl.c",
  "${source_gen_dir}/commands/verify.c",
  "${source_gen_dir}/est/est_tls.c",
  "${source_gen_dir}/pki.c",
  "${source_gen_dir}/pki_cert.c",
  "${source_gen_dir}/scep/scep.c",
]
action("pki_install_action") {
  script = "//vendor/open_source/strongswan/empty.py"
  outputs = sources_list
  deps = [ "../../../:strongswan_install_action" ]
}

ohos_executable("pki") {
  sources = sources_list
  include_dirs = [
    "${source_gen_dir}",
    "${source_gen_dir}/../libstrongswan",
    "${source_gen_dir}/../libtls",
  ]

  defines = [ "PLUGINS=\"pkcs11 aes des rc2 sha2 sha1 md5 random x509 revocation pubkey pkcs1 pkcs7 pkcs12 dnskey sshkey pem openssl pkcs8 af-alg curve25519 hmac kdf drbg\"" ]
  defines += common_defines
  cflags = common_cflags
  cflags += [ "-pthread" ]
  cflags_cc = common_cflags_cc

  deps = [
    ":pki_install_action",
    "../libstrongswan:libstrongswan",
    "../libtls:libtls",
  ]
  install_enable = true
  part_name = "strongswan"
  subsystem_name = "open_source"
}
