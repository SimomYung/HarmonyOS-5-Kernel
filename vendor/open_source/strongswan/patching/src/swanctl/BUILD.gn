import("//build/ohos.gni")
import("//vendor/open_source/strongswan/strongswan_config.gni")

source_gen_dir = "${target_gen_dir}/../../../strongswan/src/swanctl"
sources_list = [
  "${source_gen_dir}/command.c",
  "${source_gen_dir}/commands/counters.c",
  "${source_gen_dir}/commands/flush_certs.c",
  "${source_gen_dir}/commands/initiate.c",
  "${source_gen_dir}/commands/install.c",
  "${source_gen_dir}/commands/list_algs.c",
  "${source_gen_dir}/commands/list_authorities.c",
  "${source_gen_dir}/commands/list_certs.c",
  "${source_gen_dir}/commands/list_conns.c",
  "${source_gen_dir}/commands/list_pols.c",
  "${source_gen_dir}/commands/list_pools.c",
  "${source_gen_dir}/commands/list_sas.c",
  "${source_gen_dir}/commands/load_all.c",
  "${source_gen_dir}/commands/load_authorities.c",
  "${source_gen_dir}/commands/load_conns.c",
  "${source_gen_dir}/commands/load_creds.c",
  "${source_gen_dir}/commands/load_pools.c",
  "${source_gen_dir}/commands/log.c",
  "${source_gen_dir}/commands/redirect.c",
  "${source_gen_dir}/commands/rekey.c",
  "${source_gen_dir}/commands/reload_settings.c",
  "${source_gen_dir}/commands/stats.c",
  "${source_gen_dir}/commands/terminate.c",
  "${source_gen_dir}/commands/version.c",
  "${source_gen_dir}/swanctl.c",
]
action("swanctl_install_action") {
  script = "//vendor/open_source/strongswan/empty.py"
  outputs = sources_list
  deps = [ "../../../:strongswan_install_action" ]
}

ohos_executable("swanctl") {
  sources = get_target_outputs(":swanctl_install_action")

  include_dirs = [
    "${source_gen_dir}",
    "${source_gen_dir}/../libstrongswan",
    "${source_gen_dir}/../libstrongswan/netmanager/include",
    "${source_gen_dir}/../libcharon/plugins/vici",
    "${source_gen_dir}/../libcharon/certmanager/include",
  ]

  cflags = common_cflags
  cflags_cc = common_cflags_cc
  defines = common_defines
  defines += [ "PLUGINS=\"pkcs11 aes des rc2 sha2 sha1 md5 random nonce x509 revocation constraints pubkey pkcs1 pkcs7 pkcs12 pgp dnskey sshkey pem openssl pkcs8 af-alg fips-prf curve25519 xcbc cmac hmac kdf ctr ccm gcm drbg\"" ]

  deps = [
    ":swanctl_install_action",
    "../libcharon:libcharon",
    "../libstrongswan:libstrongswan",
  ]

  external_deps = [
    "c_utils:utils",
    "hilog:libhilog",
    "ipc:ipc_single",
    "netmanager_ext:net_vpn_manager_if",
  ]

  install_enable = true
  part_name = "strongswan"
  subsystem_name = "open_source"
}
