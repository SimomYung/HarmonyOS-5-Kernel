import("//build/ohos.gni")
import("//vendor/open_source/strongswan/strongswan_config.gni")

source_gen_dir = "${target_gen_dir}/../../../strongswan/src/xfrmi"
sources_list = [ "${source_gen_dir}/xfrmi.c" ]
action("xfrmi_install_action") {
  script = "//vendor/open_source/strongswan/empty.py"
  outputs = sources_list
  deps = [ "../../../:strongswan_install_action" ]
}

ohos_executable("xfrmi") {
  sources = get_target_outputs(":xfrmi_install_action")
  include_dirs = [
    "${source_gen_dir}/../libstrongswan",
    "${source_gen_dir}/../libcharon",
    "${source_gen_dir}/../libcharon/plugins/kernel_netlink",
  ]

  cflags = common_cflags
  cflags_cc = common_cflags_cc
  defines = common_defines

  deps = [
    ":xfrmi_install_action",
    "../libcharon:libcharon",
    "../libstrongswan:libstrongswan",
  ]

  install_enable = true
  part_name = "strongswan"
  subsystem_name = "open_source"
}
